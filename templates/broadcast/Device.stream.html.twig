{% block create %}
<turbo-stream action="append" target="devices">
    <template>
        <div id="{{ 'device_' ~ id }}">
            #{{ id }} created
        </div>
    </template>
</turbo-stream>
{% endblock %}

{% block update %}
<turbo-stream action="update" target="device_{{ id }}">
    <template>
        #{{ id }} updated
    </template>
</turbo-stream>
{% endblock %}

{% block remove %}
<turbo-stream action="remove" target="device_{{ id }}"></turbo-stream>
{% endblock %}
